{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <h1>Product</h1>

        <div class="table-responsive">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ product.price }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <a class="btn btn-warning" href="{{ path('app_product_index') }}">Back to List</a>
            <a class="btn btn-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a>
            <div class="mt-2">{{ include('product/_delete_form.html.twig') }}</div>
        </div>
    </div>
{% endblock %}
